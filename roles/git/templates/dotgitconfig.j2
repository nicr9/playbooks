[core]
    excludesfile = {{ lookup('env', 'HOME') }}/.gitignore_global
[color]
    ui = true
[alias]
    graph = log --oneline --graph --decorate
    sb = show-branch
    last = log --stat -n 1 --
{% if git_config_user is defined and git_config_user != {} %}
[user]
{% for key, val in git_config_user.items() %}
    {{ key }} = {{ val }}
{% endfor %}
{% endif %}
